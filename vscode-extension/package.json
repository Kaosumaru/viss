{
  "name": "vis-editor",
  "displayName": "Vis Editor",
  "description": "A Visual Shader Editor extension for VS Code",
  "author": "Kaosumaru",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kaosumaru/vis.git"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vis.openEditor",
        "title": "Open Vis Editor"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vis.openEditor",
          "title": "Vis: Open Editor"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "vis.graphEditor",
        "displayName": "Shader Graph Editor",
        "selector": [
          {
            "filenamePattern": "*.vis"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webapp",
    "build:extension": "tsc -p ./",
    "build:webapp": "cd .. && npm run build:vscode",
    "copy:dist": "npx copyfiles -u 1 \"dist/**/*\" \"vscode-extension/media/\"",
    "watch": "tsc -watch -p ./",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "typescript": "^4.9.4",
    "copyfiles": "^2.4.1"
  }
}
