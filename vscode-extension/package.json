{
  "name": "vshader-editor",
  "displayName": "VShader Editor",
  "description": "A Visual Shader Editor extension for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vshader.openEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vshader.openEditor",
        "title": "Open VShader Editor"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vshader.openEditor",
          "title": "VShader: Open Editor"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webapp",
    "build:extension": "tsc -p ./",
    "build:webapp": "cd .. && npm run build:vscode && npm run copy:dist",
    "copy:dist": "npx copyfiles -u 1 \"dist/**/*\" \"vscode-extension/media/\"",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "typescript": "^4.9.4",
    "copyfiles": "^2.4.1"
  }
}
