{
  "name": "viss",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "Visual shader editor for WebGL",
  "author": "Kaosumaru",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kaosumaru/viss.git"
  },
  "scripts": {
    "dev": "vite",
    "build:web": "tsc -b && vite build --mode production",
    "build:vscode": "tsc -b && vite build --mode vscode-extension && npx copyfiles -u 1 \"dist/**/*\" \"vscode-extension/media/\"",
    "check-types": "tsc -b --noEmit",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run --reporter verbose"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "@shaderfrog/glsl-parser": "^6.0.2",
    "@types/styled-components": "^5.1.34",
    "deep-equal": "^2.2.3",
    "emittery": "^1.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rete": "^2.0.6",
    "rete-area-plugin": "^2.1.3",
    "rete-auto-arrange-plugin": "^2.0.2",
    "rete-connection-plugin": "^2.0.5",
    "rete-context-menu-plugin": "^2.0.6",
    "rete-react-plugin": "^2.0.7",
    "rete-render-utils": "^2.0.3",
    "styled-components": "^6.1.19",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/deep-equal": "^1.0.4",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  }
}
